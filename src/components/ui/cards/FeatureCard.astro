---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: The link to the blog post
// Reference: https://wind-ui.com/components/cards/

// Components
// - UI
import Card from './BasicCard.astro'

// Props
type Props = {
	title?: string
	subtitle?: string
	image?: any
	link?: string
}
const { title, subtitle, image, link } = Astro.props
---

<Card
	title={title}
	subtitle={subtitle}
	titleSize="xl"
	link={link}
	image={image}
	type="image-bottom"
	classes="!bg-gradient-to-br from-white via-primary-50 to-secondary-50 !shadow-lg shadow-primary-200/50 dark:!bg-gradient-to-br dark:from-neutral-800 dark:via-primary-900 dark:to-secondary-900 h-full justify-between border-2 border-primary-200 dark:border-primary-700 hover:border-secondary-300 dark:hover:border-secondary-600 transition-all duration-300 hover:shadow-xl hover:shadow-secondary-200/50 dark:hover:shadow-secondary-800/50"
/>
