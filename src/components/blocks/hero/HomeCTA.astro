---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Button from '../../ui/Button.astro'
import AvatarGroup from '../../ui/AvatarGroup.astro'

// Content
// - Hero Image
import heroImage from '../../../assets/hero-01.png'
// - Avatars
import user1 from '../../../assets/avatars/avatar-01.webp'
import user2 from '../../../assets/avatars/avatar-02.webp'
import user3 from '../../../assets/avatars/avatar-03.webp'
const avatars = [
	{ image: { src: user1.src, alt: 'user name' }, link: '/' },
	{ image: { src: user2.src, alt: 'user name' }, link: '/' },
	{ image: { src: user3.src, alt: 'user name' }, link: '/' }
]
---

<Section id="intro" padding="top" classes="bg-gradient-to-br from-primary-100 via-secondary-50 to-accent-100 dark:from-primary-900 dark:via-secondary-900 dark:to-accent-900">
	<Row>
		<Col span="2" />
		<Col span="8" align="center">
			<ChipNotification radius="rounded-full" classes="mb-6 bg-secondary-500 text-white border-secondary-600">
				<strong>30K+</strong> satisfied customers
				<AvatarGroup avatars={avatars} radius="rounded-full" slot="button" />
			</ChipNotification>
			<h1 class="text-primary-700 dark:text-primary-300">Enhance team <strong class="text-secondary-600 dark:text-secondary-400">performance</strong> with seamless integration</h1>

			<p class="pb-0 text-lg text-accent-700 dark:text-accent-300">Work smarter, not harder, with our innovative platform</p>
			<Button size="lg" link="/" classes="bg-gradient-to-r from-primary-500 to-secondary-500 hover:from-primary-600 hover:to-secondary-600 text-white border-none shadow-lg">Get started for free</Button>
		</Col>
		<Col span="2" />
		<Col span="2" />
		<Col span="8">
			<Image
				src={heroImage}
				alt="Foxi. The tailwind astro theme"
				class="translate-y-8 shadow-2xl shadow-primary-300/50 border-4 border-gradient-to-r from-primary-400 to-secondary-400 rounded-2xl dark:shadow-primary-700/50"
				format="webp"
			/></Col
		>
		<Col span="2" />
	</Row>
</Section>
